<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    >


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="NotSkribbl.io"
        android:textColor="@color/purple_light"
        android:textSize="75sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCreate"
        android:layout_width="414dp"
        android:layout_height="610dp"
        android:background="@drawable/border_layout"
        android:elevation="8dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/create_account"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tverrorcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/existing_user"
            android:textColor="@color/red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/pwerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwerror"
            android:textColor="@color/red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fail"
            android:textColor="@color/red"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="81dp"
            android:text="@string/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tverrorcreate" />

        <EditText
            android:id="@+id/etcreateusername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:digits="
            ABCDEFGHIJKLMNOPQRSTUVWXYZ
            abcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"
            app:backgroundTint="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginLeft="81dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etcreateusername" />

        <EditText
            android:id="@+id/etcreatename"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:digits="
            ABCDEFGHIJKLMNOPQRSTUVWXYZ
            abcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"
            app:backgroundTint="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/lastname"
            android:layout_marginLeft="81dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etcreatename" />

        <EditText
            android:id="@+id/etcreatelastname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:digits="
            ABCDEFGHIJKLMNOPQRSTUVWXYZ
            abcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="10"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"
            app:backgroundTint="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="81dp"
            android:text="@string/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etcreatelastname" />

        <EditText
            android:id="@+id/etcreatepassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:digits="
            ABCDEFGHIJKLMNOPQRSTUVWXYZ
            abcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="16"
            android:password="true"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"
            app:backgroundTint="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/tvconfirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="4dp"
            android:text="@string/confirmpassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etcreatepassword" />

        <EditText
            android:id="@+id/etconfirmpassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:digits="
            ABCDEFGHIJKLMNOPQRSTUVWXYZ
            abcdefghijklmnopqrstuvwxyz1234567890"
            android:maxLength="16"
            android:password="true"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"
            app:backgroundTint="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvconfirmpassword" />

        <TextView
            android:id="@+id/tvavatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="4dp"
            android:text="@string/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etconfirmpassword" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createavatar"
            android:layout_width="250dp"
            android:layout_height="95dp"
            android:background="@drawable/edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvavatar" >

            <ImageButton
                android:id="@+id/avatar1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/avatar1"
                android:scaleType="fitXY"
                android:background="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/avatar2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/avatar2"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/avatar3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/avatar3"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/avatar4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/avatar4"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/avatar5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/avatar5"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatar1" />

            <ImageButton
                android:id="@+id/avatar6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/avatar6"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar5"
                app:layout_constraintTop_toBottomOf="@id/avatar2" />

            <ImageButton
                android:id="@+id/avatar7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/avatar7"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar6"
                app:layout_constraintTop_toBottomOf="@id/avatar3" />

            <ImageButton
                android:id="@+id/avatar8"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/avatar8"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/avatar7"
                app:layout_constraintTop_toBottomOf="@id/avatar4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/submit_button"
            android:enabled="false"
            android:onClick="submit"
            android:text="@string/submit"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:onClick="openConnection"
            android:text="@string/connexion_in_create"
            android:textColor="@color/purple_light"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>