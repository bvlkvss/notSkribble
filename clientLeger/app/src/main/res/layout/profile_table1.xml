        android:layout_width="170dp"
        android:text="layout"
        android:textColor="@color/purple_light"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/date2"
        android:layout_width="170dp"
        android:text="layout"
        android:textColor="@color/purple_light"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time2"
        android:layout_width="170dp"
        android:text="layout"
        android:textColor="@color/purple_light"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_height="wrap_content"/>
